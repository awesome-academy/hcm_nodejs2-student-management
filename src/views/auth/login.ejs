<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= t('login.title') %></title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <link rel="stylesheet" href="/stylesheets/bootstrap.min.css" />
  </head>
  <body>
    <div class="login-container">
      <div class="left">
        <div class="icon">
          <img class="icon-img" src="/images/logo.svg" />
        </div>
        <img class="illus-img" src="/images/school.jpg" />
      </div>
      <div class="right">
        <div class="login-form-container">
          <h2><%= t('login.title') %></h2>
          <p><%= t('login.instruction') %></p>
          <form method="POST">
            <input
              type="text"
              name="username"
              required
              placeholder="<%= t('login.username_ph') %>"
              value="<%= typeof data !== 'undefined' ? data.username : '' %>"
            />
            <input
              type="password"
              name="password"
              required
              placeholder="<%= t('login.password_ph') %>"
              value="<%= typeof data !== 'undefined' ? data.password : '' %>"
            />
            <% if (typeof errors !== 'undefined' && errors.length > 0) { %>
            <ul class="error-list">
              <% errors.forEach(error => { %>
              <li class="text-danger"><%= error.msg %></li>
              <% }); %>
            </ul>
            <% } %>
            <div class="fp-container">
              <a href="/forgot-password"
                ><strong><%= t('forgot-password') %></strong></a
              >
            </div>
            <button type="submit">
              <strong><%= t('login.title') %></strong>
            </button>
          </form>
        </div>
      </div>
    </div>
  </body>
</html>
